@import  "../../../../app.wxss";
page{
    background: url(../../../../img/con_bg3.png);
}
.logo{
    width: 100%;
    height: 80px;
    margin: 20px auto;
    background: url(../../../../img/logo.png) no-repeat center center;
}
.positionBar{
    width: 100%;
    float: left;
    height: 1.3rem;
    
}
.positionBar image{
     width: 13px;
     height:15px;
     margin: 0px 5px;
}
.show,.selectbox{
    width: 80px;
}
.input{
    margin-left: 73px;
}
 
text{
    text-align: center;
    font-size: 13px;
}

.search-box{
    width: 100%;
    height: 30px;
    margin: 10px;
    border: 1px solid #c6c6c6;
    border-radius: 4px;
    padding: 0;
    position: relative;
    background-color:gainsboro;
}
.show{
    display: block;
}
.hidden{
    display: none;
}
.show,.selectbox{
    font-size: 14px;
    color: #666;
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    line-height: 30px;
    text-align: center;
    width: 80px;
}
.show{
    height: 64px;
    line-height: 32px;
    margin: -1px 0 0 -1px;
    background-color: #fff;
    border: 1px solid #c6c6c6; 
    z-index: 20;
    border-radius: 4px 0 4px 4px;
}
.selectbox{
    z-index: 10;
    border-right: 1px solid #c6c6c6;
}
.input{
    margin-left: 81px;
    margin-right: 30px;
    padding: 0 10px;
}
.input input{
    line-height: 30px;
    font-size: 14px;
    height: 30px;
}
.btn-search{
    position: absolute;
    right: 0;
    top: 5px;
    height: 30px;
    width: 25px;
}
.search-box button{
    position: absolute;
    right: 0;
    top: 0;
    height: 30px;
    width: 30px;
    opacity: 0;
}